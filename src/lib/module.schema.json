{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://nstrumenta.com/module.schema.json",
  "title": "Module",
  "description": "An Nstrumenta module",
  "type": "object",
  "properties": {
    "nst-version": {
        "type": "string",
        "description": "Version of nst used to make/update this module"
    },
    "type": {
        "type": "string",
        "description": "Type of module",
        "enum": ["algorithm", "nodejs", "sandbox"]
    },
    "name": {
        "type": "string",
        "description": "Module name"
    },
    "entry": {
        "type": "string",
        "description": "Entry point of the script, relative to cwd"
    },
    "version": {
        "type": "string",
        "description": "Module version"
    },
    "excludes": {
        "description": "List of string patterns to exclude from packaging module for publish (e.g., node_modules likely always)",
        "type": "array",
        "items": {
            "type": "string"
        }
    }
  },
  "required": ["nst-version", "type", "name", "entry", "version"]
}
